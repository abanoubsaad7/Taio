<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>
<body>
    <%- include("partials/header") %>
    <div class="container">
      <div class="row">
        <div class="col-lg-5">
          <div class="card" style="width: 18rem; background-image: linear-gradient(to bottom right, #152A38, #D1D4C9);">
            <img src="/userImg/<%= objuser.img %>" alt="profile" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"></h5>
                اهلا يا صديقي   <%= objuser.username %> 
             </h5>
              <p class="card-text">تليفون: <%= objuser.Number %> </p>
            </div>
          </div>
          <section class="profile">
            
            <form action="/userImg/<%= objuser._id %>" method="post" enctype="multipart/form-data">
                تغيير الصورة
                <input type="file" name="userImg" id="userImg" class="btn"style=" background-image: linear-gradient(to bottom right, #152A38, #D1D4C9);">
                <input type="submit" value="تغيير" class="btn btn-lg"style=" background-image: linear-gradient(to bottom right, #152A38, #D1D4C9);">
            </form>
            
        </section>
        </div>
        <div class="col-lg-7">
          <section class="order">
            <h1>
                طلباتك
            </h1>
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">العنوان</th>
                    <th scope="col">السعر</th>
                    <th scope="col">التحكم بالهدية</th>
                  </tr>
                </thead>
                <tbody>
                 <% products.forEach (item=> { %> 
                  <tr>
                    <td><img src="/productImg/<%= item.imgPath %>" alt="..." width="50" height="50" style="border-radius: 10px; box-shadow: 1px 5px 7px 0 #152A38; border-color: #fff; border-width: 1px; border-style: solid;"></td>
                    <td><%= item.proTitle %></td>
                    <td><%= item.proPrice %> Taio</td>
                    <td><a href="deleteOrder/<%= item._id %>" class="btn btn-danger">مسح الهدية</a></td>
                  </tr>
                 <% }) %> 
                </tbody>
              </table>
        </section>
        </div>
      </div>
    </div>
</body>
</html>