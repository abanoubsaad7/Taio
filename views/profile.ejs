<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>
<body>
    <%- include("partials/header") %>
    <div class="container">
    <section class="profile">
        <img src="/userImg/<%= objuser.img %>" alt="profile" class="profile-pic">
        <form action="/userImg/<%= objuser._id %>" method="post" enctype="multipart/form-data">
            تغيير الصورة
            <input type="file" name="userImg" id="userImg" class="btn lonbtn">
            <input type="submit" value="تغيير" class="btn lonbtn">
        </form>
        <h1 class="name">
           اهلا يا صديقي   <%= objuser.username %> 
        </h1>
    </section>
    <section class="order">
        <h1>
            طلباتك
        </h1>
        <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">العنوان</th>
                <th scope="col">السعر</th>
                <th scope="col">التحكم بالهدية</th>
              </tr>
            </thead>
            <tbody>
             <% products.forEach (item=> { %> 
              <tr>
                <td><img src="/productImg/<%= item.imgPath %>" alt="..." width="50" height="50" style="border-radius: 10px; box-shadow: 1px 5px 7px 0 #152A38; border-color: #fff; border-width: 1px; border-style: solid;"></td>
                <td><%= item.proTitle %></td>
                <td><%= item.proPrice %> Taio</td>
                <td><a href="deleteOrder/<%= item._id %>" class="btn btn-danger">مسح الهدية</a></td>
              </tr>
             <% }) %> 
            </tbody>
          </table>
    </section>
    </div>
</body>
</html>